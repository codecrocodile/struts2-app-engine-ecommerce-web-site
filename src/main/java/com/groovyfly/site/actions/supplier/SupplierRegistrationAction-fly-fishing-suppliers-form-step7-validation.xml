<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
    "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>

    <field name="supplierRegistrationDetails.ableToProvideReference">
        <field-validator type="required">
            <message>You are required to select a value.</message>
        </field-validator>
    </field>
    
    <field name="supplierRegistrationDetails.exampleCustomers">
        <field-validator type="stringlength">
            <param name="maxLength">4000</param>
            <param name="trim">true</param>
            <message>Sorry, you have entered too much information (4000 character maximum).</message>
        </field-validator>
    </field>
    
    <field name="supplierRegistrationDetails.theirflyQualityRating">
        <field-validator type="int">
            <param name="min">1</param>
            <param name="max">10</param>
            <message>You are required to select a value.</message>
        </field-validator>
    </field>
    
    
    <field name="supplierRegistrationDetails.otherCompanyInfo">
        <field-validator type="stringlength">
            <param name="maxLength">4000</param>
            <param name="trim">true</param>
            <message>Sorry, you have entered too much information (4000 character maximum).</message>
        </field-validator>
    </field>    
    
</validators>
